<Window 
        x:Class="YoutubeProjeto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeProjeto"
        xmlns:view="clr-namespace:YoutubeProjeto.View"
        xmlns:vms="clr-namespace:YoutubeProjeto.ViewModels"
    xmlns:custom="clr-namespace:ModalControl;assembly=ModalControl"
    mc:Ignorable="d"
        FontSize="15"
        Title="Youtube Viewers"
        Height="450"
        Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vms:AddYouTubeViewerViewModel}">
            <view:AddYoutubeViewerView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vms:EditYouTubeViewerViewModel}">
            <view:EditYouTubeViewerView />
        </DataTemplate>
    </Window.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <custom:Modal Panel.ZIndex="1" IsOpen="{Binding IsModalOpens}">
                <ContentControl Margin="50 30" Content="{Binding CurrentModalViewModel}" />
            </custom:Modal>

            <view:YouTubeViewersView Margin="25" DataContext="{Binding YouTubeViewersViewModel}"/>
        </Grid>
    </ScrollViewer>
</Window>
